{%- style -%}

{%- endstyle -%}

<div
  id="Patinapatina-Stockists-{{ section.id }}"
  class="patinapatina-stockists">
  <h2>Stockists</h2>
  <div class="patinapatina-stockists-list">
   {% comment %}  <p>Issues Mag Shop</p>
    <p>Disko Coffee</p>
    <p>Typist Books & Coffee</p>
    <p>Art Metropole</p>
    <p>Offbrand Library</p>
    <p>Maktaba Bookstore</p> {% endcomment %}
    {% comment %} {% for block in section.blocks %}
      {%- case block.type -%}
        {%- when "patinapatina-stockist" -%}
          <p><a href="{{ block.settings.url }}">{{ block.settings.name }}</a></p>
      {% endcase %}
    {% endfor %} {% endcomment %}
    {% comment %} {% content_for 'blocks' %} {% endcomment %}
     {% content_for 'blocks' %}
