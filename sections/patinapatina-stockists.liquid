      {%- case block.type -%}
        {%- when "patinapatina-stockist" -%}
          <p><a href="{{ block.settings.url }}">{{ block.settings.name }}</a></p>
      {% endcase %}
    {% endfor %} {% endcomment %}
  </div>
  <div class="patinapatina-stockists-background">
    {{ 'patinapatina-stockists-background.svg' | asset_url | img_tag }}
  </div>
</div>

{% schema %}
  {
    "name": "PatinaPatina Stockists",
    "tag": "section",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [

    ],
    "blocks": [
      {
        "type": "patinapatina-stockist",
        "name": "Stockist",
        "settings": [
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          },
          {
            "type": "url",
            "id": "url",
            "label": "URL"
          }
        ]
      }
    ]
  }
  {% endschema %}
