{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer class="pp-footer">
  <div class="footer-menu">
    <ul role="list">
      {% for link in linklists.footer.links %}
        <li>
          <a
            id="FooterMenu-{{ link.handle }}"
            href="{{ link.url }}"
            {% if link.current %}
            aria-current="page"
            {% endif %}
            {% if link.type == 'http_link' %}
            target="_blank"
            {% endif %}>
            {{ link.title | escape }}
          </a>
        </li>
      {% endfor %}
    </ul>
    <div class="logo-container{% if request.path != '/' %}-colored{% endif %}">
      {% if request.path == '/' %}
        <img src="{{ 'pp-footer.png' | asset_url }}">
      {% else %}
        <img src="{{ 'pp-footer-bw.png' | asset_url }}">
      {% endif %}
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "t:sections.footer.name",
    "class": "section-footer"
  }
{% endschema %}