{{ 'pp-hero.css' | asset_url | stylesheet_tag }}

<div class="pp-hero color-landing">
  <div class="pp-hero-inner">
    <h3>{{ section.settings.hero_statement }}</h3>
    {{ 'pp-emblem.svg' | inline_asset_content }}

  </div>
</div>

{% schema %}
  {
    "name": "PatinaPatina Hero",
    "tag": "section",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "text",
        "id": "hero_statement",
        "label": "Hero Statement"
      }
    ],
    "presets": [
      {
        "name": "pp-hero"
      }
    ]
  }
{% endschema %}